<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.filmetrics.eqrcodeapp.RegistrationActivity">

    <EditText
        android:id="@+id/password_txt_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/email_txt_reg"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/email_txt_reg"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/email_txt_reg"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/repassword_txt_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Retype Password"
        android:inputType="textPassword"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/password_txt_reg"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/password_txt_reg"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/password_txt_reg"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/email_txt_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email Address"
        tools:layout_editor_absoluteY="68dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        tools:layout_editor_absoluteX="148dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/repassword_txt_reg" />
</android.support.constraint.ConstraintLayout>
