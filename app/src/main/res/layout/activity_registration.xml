<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.filmetrics.eqrcodeapp.RegistrationActivity">

    <EditText
        android:id="@+id/username_txt_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <EditText
        android:id="@+id/password_txt_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/username_txt_reg"
        app:layout_constraintRight_toRightOf="@+id/username_txt_reg"
        app:layout_constraintTop_toBottomOf="@+id/username_txt_reg" />

    <EditText
        android:id="@+id/repassword_txt_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Retype Password"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/username_txt_reg"
        app:layout_constraintRight_toRightOf="@+id/username_txt_reg"
        app:layout_constraintTop_toBottomOf="@+id/password_txt_reg" />

    <EditText
        android:id="@+id/email_txt_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email Address"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/username_txt_reg"
        app:layout_constraintRight_toRightOf="@+id/username_txt_reg"
        app:layout_constraintTop_toBottomOf="@+id/repassword_txt_reg" />

    <EditText
        android:id="@+id/firstname_txt_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Firstname"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/username_txt_reg"
        app:layout_constraintRight_toRightOf="@+id/username_txt_reg"
        app:layout_constraintTop_toBottomOf="@+id/email_txt_reg" />

    <EditText
        android:id="@+id/middlename_txt_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Middlename"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/username_txt_reg"
        app:layout_constraintRight_toRightOf="@+id/username_txt_reg"
        app:layout_constraintTop_toBottomOf="@+id/firstname_txt_reg" />

    <EditText
        android:id="@+id/lastname_txt_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Lastname"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/username_txt_reg"
        app:layout_constraintRight_toRightOf="@+id/username_txt_reg"
        app:layout_constraintTop_toBottomOf="@+id/middlename_txt_reg" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="431dp" />
</android.support.constraint.ConstraintLayout>
