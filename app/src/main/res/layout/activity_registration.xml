<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.filmetrics.eqrcodeapp.RegistrationActivity">

    <EditText
        android:id="@+id/password_txt_reg"
        android:layout_width="215dp"
        android:layout_height="45dp"
        android:background="@drawable/edittextbox"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:ellipsize="start"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/email_txt_reg"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/email_txt_reg"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/email_txt_reg"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/repassword_txt_reg"
        android:layout_width="215dp"
        android:layout_height="45dp"
        android:background="@drawable/edittextbox"
        android:ems="10"
        android:hint="Retype Password"
        android:inputType="textPassword"
        android:ellipsize="start"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/password_txt_reg"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/password_txt_reg"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/password_txt_reg"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/email_txt_reg"
        android:layout_width="215dp"
        android:layout_height="45dp"
        android:background="@drawable/edittextbox"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email Address"
        android:ellipsize="start"
        android:gravity="center"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="87dp"
        app:layout_constraintHorizontal_bias="0.503" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="215dp"
        android:layout_height="45dp"
        android:background="@drawable/buttonbox"
        android:text="Register"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/repassword_txt_reg"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="17dp"
        android:text="OR REGISTER WITH"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_btn" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginLeft="-20dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/fb_icon"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="0dp"
        android:layout_marginRight="-18dp"
        app:layout_constraintRight_toRightOf="@+id/textView4" />
</android.support.constraint.ConstraintLayout>
